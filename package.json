{
    "scripts": {
        "start": "electron ./app",
        "pack": "build --dir",
        "dist": "build -ml",
        "release": "build"
    },
    "build": {
        "appId": "me.hari.saavn",
        "mac": {
            "category": "public.app-category.music",
            "target": [
                "dmg",
                "zip"
            ]
        },
        "dmg": {
            "icon": "build/dmg.png",
            "contents": [
                {
                    "x": 130,
                    "y": 220
                },
                {
                    "x": 410,
                    "y": 220,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "linux": {
            "target": [
                "appImage",
                "deb",
                "tar.gz"
            ],
            "category": "Audio"
        },
        "win": {
            "target": [
                "nsis",
                "squirrel",
                "zip"
            ]
        }
    },
    "devDependencies": {
        "electron": "^1.4.1"
    }
}